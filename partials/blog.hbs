<section class="cards-container">
    {{#each blog}}
    <div class="card">
        <div class="card-image">
            <img src="{{imgUrl}}" alt="{{alt}}">
        </div>
        <div class="card-text">
            <div class="card-title">
                <h2>{{tittle}}</h2>
            </div>
            <div class="card-content">
                <p>{{content}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</section>